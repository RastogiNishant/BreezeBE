{
    "env": {
      "node": true,
      "commonjs": true,
      "es2021": true
    },
    "globals": {
      "use": false
    },
    "extends": [
      "standard",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-unused-vars": "warn",
      "camelcase": "warn",
      "spaced-comment": "warn",
      "eqeqeq": "warn",
      "no-useless-constructor": "warn",
      "no-useless-escape": "warn",
      "prefer-const": "warn",
      "lines-between-class-members": "warn",
      "array-callback-return": "warn",
      "dot-notation": "warn",
      "no-case-declarations": "warn",
      "no-template-curly-in-string": "warn"
    },
    "plugins": [
      "prettier"
    ]
}
